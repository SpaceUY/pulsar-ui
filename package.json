{
  "name": "@space-uy/pulsar-ui",
  "version": "0.7.0",
  "description": "react native ui kit for spacedev",
  "source": "./src/index.tsx",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace pulsar-ui-playground",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SpaceUY/pulsar-ui.git"
  },
  "author": "chacaa <santiagocasaslopez@gmail.com> (https://github.com/chacaa)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SpaceUY/pulsar-ui/issues"
  },
  "homepage": "https://github.com/SpaceUY/pulsar-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.78.0",
    "@react-navigation/elements": "^2.3.8",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.0",
    "commitlint": "^19.6.1",
    "date-fns": "^4.1.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "lucide-react-native": ">=0.503.0",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-builder-bob": "^0.40.6",
    "react-native-calendars": "^1.1312.1",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-svg": "^15.11.2",
    "release-it": "^17.10.0",
    "typescript": "^5.2.2",
    "zustand": "^5.0.4"
  },
  "peerDependencies": {
    "@react-navigation/elements": ">=2.3.8",
    "lucide-react-native": ">=0.503.0",
    "react": ">=18.3.1",
    "react-native": ">=0.76.0",
    "react-native-gesture-handler": ">=2.25.0",
    "react-native-reanimated": ">=3.16.0",
    "react-native-svg": ">=15.11.0",
    "zustand": ">=5.0.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.49.8"
  },
  "dependencies": {
    "expo-linear-gradient": "^14.1.5",
    "react-native-linear-gradient": "^2.8.3"
  }
}
